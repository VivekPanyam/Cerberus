{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "indent": [true, "spaces", 4],
        "semicolon": [true, "never"],
        "object-literal-sort-keys": false,
        "only-arrow-functions": false,
        "no-console": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
